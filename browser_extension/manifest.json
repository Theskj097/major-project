{
  "manifest_version": 3,
  "name": "PhishGuard AI - Phishing Detection",
  "version": "1.0",
  "description": "AI-powered phishing detection with real-time scanning and explanations",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
